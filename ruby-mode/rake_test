# -*- mode: snippet -*-
# uuid: rake_test
# name: Rake test task
# key: rake_test
# group: Rakefile
# --
require 'rake/testtask'

Rake::TestTask.new(:test) do |t|
  t.libs.push('lib', '${1:test}')
  t.test_files = FileList['$1/**/test_*.rb', '$1/**/*_test.rb',]
  t.verbose = true
  t.warning = true
end

${2:task default: [:test]}
$0